---
import img from '../assets/image/image5.webp';
const {title1, text1} = Astro.props;
---

<section id="about">
	<div class="animated">
		<h2>{title1}</h2>
		<div class="underline"></div>
		<p>{text1}</p>
	</div>
	<div>
		<img src={img.src} alt="#">
  </div>
</section>

<style lang="scss">
	@use '../assets/sass/index' as *;

	section{
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		margin: 0 auto;
		width: 100%;
		max-width: 400px;
		gap: 50px;
		padding: 40px 0;


		p{
			margin-top: 20px;
			color: $black;
		}

		img{
			width: 90%;
			border-radius: 10px;
			box-shadow: 0px 4px 20px rgba(0,0,0,0.2);
			object-fit: cover;
			object-position: center center;
		}
	}

	@media (min-width: 768px) {
		section {
			flex-direction: row-reverse;
			max-width: 90%;
      margin: 0 auto;
		}
	}

	@media (min-width: 1024px) {
		section {
			flex-direction: row-reverse;
			max-width: 80%;
			margin: 0 5%;
		}
	}

</style>