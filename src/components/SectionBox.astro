---
const { titleA, titleB, titleC } = Astro.props;
import icon from "../assets/image/factory.png";
---

<section id="projects">
  <figure>
    <div class="animated content-back-A">
      <img src={icon.src} alt="#">
      <h4>{titleA}</h4>
    </div>
    <div class="animated content-back-B">
      <img src={icon.src} alt="#">
      <h4>{titleB}</h4>
    </div>
    <div class="animated content-back-C">
      <img src={icon.src} alt="#">
      <h4>{titleC}</h4>
    </div>
  </figure>
</section>

<style lang="scss">
  @use '../assets/sass/index' as *;

  .animated {
    opacity: 0; 
    transform: translateX(100px); 
    transition: opacity 0.7s ease, transform 0.7s ease;
    will-change: transform, opacity; 
  }

  .animated.visible {
    opacity: 1;
    transform: translateX(0);
  }

  .animated:nth-child(1) {
    transition-delay: 0.4s;
  }

  .animated:nth-child(2) {
    transition-delay: 0.6s;
  }

  .animated:nth-child(3) {
    transition-delay: 0.8s;
  }
  //animation end

  section {
    position: relative;
    padding: 50px 0;
    background-color: #dfdfdf;
  }

  figure{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 90%;
    margin: 0 auto; 
    max-width: 400px;
    background-color: transparent;
    gap: 50px;

    p, h4{
      color: $white;
    }

    p{
      margin-bottom: 40px;
    }
  }

  .content-back-B {
    position: relative;
    background-image:linear-gradient(rgba(0, 0, 0, 50%), rgba(0, 0, 0, 50%)), url("../assets/image/image6.webp");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 300px;
    max-width: 500px;
    margin: 0 auto;
  }

  .content-back-A {
    position: relative;
    background-image:linear-gradient(rgba(0, 0, 0, 50%), rgba(0, 0, 0, 50%)), url("../assets/image/image8.webp");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 300px;
    max-width: 500px;
    margin: 0 auto;

    img {
      width: 100px;
      margin: 0 auto;
    }
  }

  .content-back-C {
    position: relative;
    background-image:linear-gradient(rgba(0, 0, 0, 50%), rgba(0, 0, 0, 50%)), url("../assets/image/image9.webp");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 300px;
    max-width: 500px;
    margin: 0 auto;
  }

  p, h4{
    margin: 10px 5%;
  }

  @media only screen and (min-width: 1024px) {
    figure {
      flex-direction: row;
      max-width: 900px;
    }
  }

</style>