---
const {title, text, name, email, textarea, button} = Astro.props;
---
<div class="form-back"> 
  <article id="contact">
    <h2>{title}</h2>
    <div class="underline"></div>
    <p>{text}</p>
  </article>
  <section>
    <div class="form-container">
      <form action="/" method="post">
        <div class="row"> 
          <div class="column">
            <label for="name">{name}</label>
            <input type="text" id="name" name="name" placeholder="Your name" required>
          </div>
          <div class="column">
            <label for="email">{email}</label>
            <input type="email" id="email" name="email" placeholder="name@gmail.com" required>
          </div>
        </div>
        <label for="message">{textarea}</label>
        <textarea id="message" name="message" placeholder="Write your message..." required></textarea>
        <div class="content-button"> 
          <button class="primarybutton" type="submit">{button}</button>
        </div>
      </form>
    </div>
  </section>
</div>
    
<style lang="scss">
  @use "../assets/sass/index" as *;

  .form-back {
    background-image:linear-gradient(rgba(0, 0, 0, 80%), rgba(0, 0, 0, 80%)), url("../assets/image/image7.webp");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin: 0 auto;
  }

  article {
    padding: 50px 0;
    h2, p {
      color: $white;
    }
  }

  label {
    font-size: 1.25rem;
    font-family: $text;
    font-weight: $regular;
    color: $white;
    padding-top: 10px;
  }

  .column, textarea {
    margin-top: 10px;
  }
  
  textarea:hover {
    box-shadow: 0 0 25px 15px rgba($grey, 25%);
    border: 2px solid $white;
  }

  input:hover {
    box-shadow: 0 0 25px 15px rgba($green, 25%);
    border: 2px solid $white;
  }

  input {
    width: 100%;
    height: 45px;
    border-radius: 8px;
    font-family: Arial, Helvetica, sans-serif;
    margin-top: 10px;
  }

  form {
    display: flex;
    flex-direction: column;
    margin: 0 5%;
  }

  textarea {
    height: 221px;
    background-color: $white;
    border-radius: 8px;
    color: black;
    font-family: Arial, Helvetica, sans-serif;
  }

  .primarybutton {
      width: 100%;
      color: $black;
      background-color: $white;
      border: 2px solid $green;
      border-radius: 8px;
      font-size: 1.25rem;
      font-family: $text;
      font-weight: $bold;
      cursor: pointer;
    }

  .content-button {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px 0;
  }

  @media (min-width: 768px) {
    section {
      width: 70%;
      margin: 0 auto;
    }

    section {
      width: 100%;
      margin: 0 auto;
    }

    .form-container {
      text-align: center;
      align-items: center;
      padding: 0px 250px ;

      label {
        text-align: left;
      }
    }

    .row {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
    }

    .column {
      display: flex;
      flex-direction: column;
      text-align: left;
      width: 48%;
    }

    h2 {
      font-size: 3rem;
    }
    p{
      font-size: 1.5rem;
      padding: 20px;
    }
    label {
      font-size: 1.5rem;
    }

    article {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;

      p{
        width: 80%;
      }
    }

    .primarybutton {
      width: 50%;
     }
  }

  @media (min-width: 1024px) {

    section {
      width: 100%;
      margin: 0 auto;
    }

    .form-container {
      text-align: center;
      align-items: center;
      padding: 0px 250px ;

      label {
        text-align: left;
      }
    }

    .row {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
    }

    .column {
      display: flex;
      flex-direction: column;
      text-align: left;
      width: 48%;
    }

    h2 {
      font-size: 3rem;
    }
    p{
      font-size: 1.5rem;
      padding: 20px;
    }
    label {
      font-size: 1.5rem;
    }

    article {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;

      p{
        width: 80%;
      }
    }

    .primarybutton {
      width: 50%;
     }
  }
</style>